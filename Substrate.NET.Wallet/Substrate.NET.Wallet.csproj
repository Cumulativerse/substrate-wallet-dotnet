<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<PackageId>Cumulativerse.Substrate.Wallet</PackageId>
		<TargetFrameworks>netstandard2.0;netstandard2.1;net6.0</TargetFrameworks>
		<Version>1.0.0</Version>
		<Company>Cumulativerse</Company>
		<Authors>Furkan Alan</Authors>
		<Description>Substrate .NET Wallet Integration</Description>
		<PackageProjectUrl>https://cumulativerse.com</PackageProjectUrl>
		<RepositoryUrl>https://github.com/Cumulativerse/substrate-wallet-dotnet</RepositoryUrl>
		<RepositoryType>git</RepositoryType>
		<PackageLicenseFile>LICENSE</PackageLicenseFile>
	</PropertyGroup>

	<PropertyGroup>
		<GeneratePackageOnBuild>true</GeneratePackageOnBuild>
		<IncludeSymbols>true</IncludeSymbols>
		<!-- <SymbolPackageFormat>snupkg</SymbolPackageFormat> -->
	</PropertyGroup>

	<ItemGroup>
		<None Include="..\LICENSE">
			<Pack>True</Pack>
			<PackagePath></PackagePath>
		</None>
	</ItemGroup>

	<ItemGroup>
    <PackageReference Include="CryptSharpStandard" Version="1.0.0" />
	  <PackageReference Include="Substrate.NET.API" Version="0.9.11" />
	</ItemGroup>

</Project>
